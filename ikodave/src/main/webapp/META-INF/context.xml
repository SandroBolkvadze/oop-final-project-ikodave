<Context>
    <Resource name="mail/Session"
              auth="Container"
              type="jakarta.mail.Session"
              mail.smtp.host="smtp.gmail.com"
              mail.smtp.port="587"
              mail.smtp.auth="true"
              mail.smtp.starttls.enable="true"
              mail.smtp.user="${MAIL_USERNAME}"
              mail.smtp.password="${MAIL_PASSWORD}"
    />
</Context>